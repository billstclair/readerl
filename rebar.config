%% Want to override atomizer's erlsom to use https://github.com/pugpharm/erlsom

{erl_opts, [debug_info]}.

{deps, [{atomizer, {git, "https://github.com/ipinak/atomizer.git", {branch, "master"}}}
       ]}.

{relx, [{release, {'readerl', "0.1.0"},
         ['readerl',
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
